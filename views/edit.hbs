<div class="container">
  <form action="/restaurants/{{rest._id}}?_method=PUT" method="post">
    <input type="text" name="name" placeholder="餐廳中文名稱" style="display: block; margin: 10px;" value="{{rest.name}}">
    <input type="text" name="name_en" placeholder="input restaurant English name"
      style="display: block; margin: 10px; width: 250px;" value="{{rest.name_en}}">
    <input type="text" name="category" placeholder="input category" style="display: block; margin: 10px;"
      value="{{rest.category}}">

    <input type="text" name="image" style="display: block; margin: 10px;" src="{{rest.image}}">

    <input type="text" name="location" placeholder="input location" style="display: block; margin: 10px;width: 400px;"
      value="{{rest.location}}">
    <input type="text" name="phone" placeholder="input phone" style="display: block; margin:10px;"
      value="{{rest.phone}}">
    <input type="text" name="google_map" placeholder="google_map" style="display: block; margin:10px;"
      value="{{rest.google_map}}">
    <input type="number" name="rating" placeholder="0~5" step="0.1" min="0" max="5" style="display: block; margin:10px;"
      value="{{rest.rating}}">
    <input type="text" name="description" placeholder="input description"
      style="display: block; margin:10px; height: 100px; weight: 300px; text-align: left;" value="{{rest.description}}">
    <button class="btn btn-outline-success" type="submit">存檔</button>
    <a href="/">返回餐廳清單</a>
  </form>
</div>