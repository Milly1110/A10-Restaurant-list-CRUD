<!-- search bar -->
<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="container search-bar">
        <div class="search-bar-outer">
          <div class="search-bar-inner">
            <form action="/search">
              <h4 class="mb-2">尋找餐廳：</h4>
              <div class="input-group">
                <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                  aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                <div class="input-group-append">
                  <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <a href="./restaurants/new">新增餐廳</a> // 改成sort區域
    </div>
  </div>


</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">

      <div class="card-columns">
        {{#each rest}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="error">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2 fa-2x"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="card-foot p-2" style="text-align: right;">
              <a href="./restaurants/{{this._id}}">Detail</a>
              <a href="./restaurants/{{this._id}}/edit">Edit</a>
              <form action="./restaurants/{{this._id}}?_method=DELETE" method="post" style="display: inline;">
                <button type="submit" onclick="myFunction()">Delete</button>
                <script>
                  function myFunction() {
                    alert("是否確定要刪除整筆資料")
                  }
                </script>


              </form>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>